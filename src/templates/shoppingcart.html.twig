<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="style/shoppingcart.css" />
  <style>
    /* Nút quản lý đơn */
    #manage-order-button {
      position: fixed;
      top: 20px;
      right: 90px; /* Tách xa giỏ hàng */
      z-index: 1060;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }

  </style>
</head>
<body>

  <!-- Nút quản lý đơn hàng -->
  <a href="orders_admin.php"
     id="manage-order-button"
     class="btn btn-warning fw-bold fs-6">
    Quản lý đơn
  </a>

  <!-- Nút giỏ hàng -->
  <button class="cart-button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasScrolling"
          aria-label="Shopping Cart">
    <img src="style/image/cart4.svg" alt="Cart Icon">
  </button>

  <!-- Offcanvas -->
  <div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Your Cart</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-flex flex-column">
      <div id="cartItemsContainer" class="flex-grow-1">
        <p class="text-center">Your cart is empty</p>
      </div>
      <div class="mt-auto"></div>
      <div class="text-center py-3 border-top">
        <h5>Total: $<span id="cartTotal">0.00</span></h5>
        <form id="checkoutForm" action="checkout.php" method="post">
          <input type="hidden" name="cartData" id="cartDataInput">
          <button type="submit" class="btn btn-primary mt-2">Thanh toán</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
