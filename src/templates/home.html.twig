<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Đăng ký tài khoản</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style/home.css" />
    <link rel="stylesheet" href="style/style_home.css" />
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="logo">
        <img src="style/image/logo.png" alt="logo shop" class="shop-logo" />
      </div>
      <ul class="menu">
        <li><a href="#milk-tea" class="btn">Milk Tea</a></li>
        <li><a href="#fruit-tea" class="btn">Fruit Tea</a></li>
        <li><a href="#coffee" class="btn">Coffee</a></li>
        <li><a href="#ice-blended" class="btn">Ice-blended</a></li>
        <li><a href="#dessert" class="btn">Dessert</a></li>
        <li><a href="#topping" class="btn">Topping</a></li>
        <li><a href="#settings" class="btn">Settings</a></li>
        <li><a href="#logout" class="btn">Logout</a></li>
      </ul>
    </div>

    <!-- Main content -->
    <main class="px-4 pb-4 pt-0" style="margin-left: 220px">
      <section id="milk-tea">
        <h2 class="section-heading">Milk Tea</h2>
        <div class="menu--list">
          <div class="menu--item">
            <img src="style/image/trasua_anh.png" alt="" />
            <h5>Trà sữa</h5>
          </div>
        </div>
      </section>

      <section id="fruit-tea" class="mt-5">
        <h2 class="section-heading">Fruit Tea</h2>
        <p>122222221233</p>
      </section>

      <section id="coffee" class="mt-5">
        <h2 class="section-heading">Coffee</h2>
        <p>Coffee</p>
      </section>

      <section id="ice-blended" class="mt-5">
        <h2 class="section-heading">Ice-blended</h2>
        <p>123.</p>
      </section>

      <section id="dessert" class="mt-5">
        <h2 class="section-heading">Dessert</h2>
        <p>đww.</p>
      </section>

      <section id="topping" class="mt-5">
        <h2 class="section-heading">Topping</h2>
        <p>11.</p>
      </section>

      <section id="settings" class="mt-5">
        <h2 class="section-heading">Settings</h2>
        <p>111.</p>
      </section>

      <section id="logout" class="mt-5">
        <h2 class="section-heading">Logout</h2>
        <p>T11111.</p>
      </section>
    </main>

    <!-- Offcanvas giỏ hàng -->
    <button
      class="btn btn-outline-primary position-fixed end-0 top-0 m-4 p-2"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasScrolling"
    >
      <i class="bi bi-cart4"></i>
    </button>
    <!-- <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">Enable body scrolling</button> -->
    <div
      class="offcanvas offcanvas-end"
      data-bs-scroll="true"
      data-bs-backdrop="false"
      tabindex="-1"
      id="offcanvasScrolling"
      aria-labelledby="offcanvasScrollingLabel"
    >
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Giỏ hàng</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"
        ></button>
      </div>
      <div class="offcanvas-body">
        <p>Thông tin giỏ hàng của bạn sẽ hiện ở đây.</p>
      </div>
    </div>

    <!-- Bootstrap script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
